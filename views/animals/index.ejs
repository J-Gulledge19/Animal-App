<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/header.ejs") %>
    <main>
      <div>
        <% for (animal of animals) { %>

        <article>
          <a href="/animals/<%= animal._id %>">
            <img id="init" src="<%=animal.img%>" />
            <h2><%= animal.animalType %></h2>
          </a>
        </article>

        <% } %>
        <a href="/animals/new"><button>Add New Animal</button></a>
      </div>
    </main>
    <style>
      main{
        max-width: 800px;
      }

      a img {
        display: none;
      }

      a:hover img {
        display: block;
      }

      #init {
        width: 300px;
        height: 200px;
        border: 5px solid blue;
        float: right;  
        margin-right: 100px;
      }
    </style>
  </body>
</html>
